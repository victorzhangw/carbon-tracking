<?xml version="1.0" encoding="utf-8"?>
<!--
   資料提取規則（Android 12+ 需要）
   定義哪些資料可以被備份和傳輸
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- 允許雲端備份 -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <include domain="file" path="."/>
    </cloud-backup>
    
    <device-transfer>
        <!-- 允許裝置間傳輸 -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <include domain="file" path="."/>
    </device-transfer>
</data-extraction-rules>
