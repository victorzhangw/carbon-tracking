    <script>
      // DOM Elements
      const startRecordBtn = document.getElementById("startRecord");
      const stopRecordBtn = document.getElementById("stopRecord");
      const waveformCanvas = document.getElementById("waveform");
      const statusBox = document.getElementById("statusBox");
      const chatMessages = document.getElementById("chatMessages");

      // Setup canvas
      waveformCanvas.width = waveformCanvas.parentElement.offsetWidth;
      waveformCanvas.height = waveformCanvas.parentElement.offsetHeight;
      const canvasCtx = waveformCanvas.getContext("2d");

      // Recording variables
      let mediaRecorder;
      let audioChunks = [];
      let analyser;
      let dataArray;
      let animationId;

      // Weather and location data
      let weatherData = null;
      let userLocation = null;

      // è©•åˆ†ç³»çµ±ç®¡ç†å™¨
      let scoreManager = null;

      // å°è©±æ­·å²ç®¡ç†
      let conversationHistory = [];
      let conversationRound = 0;

      // Auto-stop detection variables
      const SILENCE_THRESHOLD = 0.01; // éœéŸ³é–¾å€¼ï¼ˆ0-1ï¼‰
      const SILENCE_DURATION = 2000; // éœéŸ³æŒçºŒæ™‚é–“ï¼ˆæ¯«ç§’ï¼‰
      const MIN_RECORDING_TIME = 500; // æœ€çŸ­éŒ„éŸ³æ™‚é–“ï¼ˆé¿å…èª¤è§¸ï¼‰
      const MAX_RECORDING_TIME = 30000; // æœ€é•·éŒ„éŸ³æ™‚é–“ï¼ˆ30ç§’ï¼‰

      let silenceStart = null;
      let recordingStartTime = null;
      let maxTimeTimer = null;
      let isAutoStopping = false;

      // Calculate audio volume (RMS)
      function getAudioVolume() {
        analyser.getByteTimeDomainData(dataArray);
        let sum = 0;
        for (let i = 0; i < dataArray.length; i++) {
          const normalized = (dataArray[i] - 128) / 128;
          sum += normalized * normalized;
        }
        return Math.sqrt(sum / dataArray.length);
      }

      // Check for silence
      function checkSilence() {
        // ç¢ºä¿å·²ç¶“éŒ„éŸ³è¶…éæœ€çŸ­æ™‚é–“
        if (Date.now() - recordingStartTime < MIN_RECORDING_TIME) {
          return;
        }

        const volume = getAudioVolume();

        if (volume < SILENCE_THRESHOLD) {
          // é–‹å§‹éœéŸ³è¨ˆæ™‚
          if (!silenceStart) {
            silenceStart = Date.now();
            updateStatus("ğŸ”‡ æª¢æ¸¬åˆ°éœéŸ³...", true);
          }

          // æª¢æŸ¥éœéŸ³æŒçºŒæ™‚é–“
          const silenceDuration = Date.now() - silenceStart;
          if (silenceDuration > SILENCE_DURATION) {
            autoStopRecording("æª¢æ¸¬åˆ°éœéŸ³");
          }
        } else {
          // æœ‰è²éŸ³ï¼Œé‡ç½®éœéŸ³è¨ˆæ™‚
          if (silenceStart) {
            silenceStart = null;
            const elapsed = Math.floor(
              (Date.now() - recordingStartTime) / 1000
            );
            updateStatus(`ğŸ¤ éŒ„éŸ³ä¸­... ${elapsed}ç§’`, true);
          }
        }
      }

      // Auto stop recording
      function autoStopRecording(reason) {
        if (isAutoStopping) return;
        isAutoStopping = true;

        console.log("è‡ªå‹•åœæ­¢éŒ„éŸ³:", reason);
        updateStatus(`â¹ï¸ ${reason}ï¼Œæ­£åœ¨è™•ç†...`, true);

        // è§¸ç™¼åœæ­¢éŒ„éŸ³
        setTimeout(() => {
          stopRecordBtn.click();
        }, 100);
      }

      // Draw waveform
      function drawWaveform() {
        animationId = requestAnimationFrame(drawWaveform);
        analyser.getByteTimeDomainData(dataArray);

        canvasCtx.fillStyle = "#f8f9fa";
        canvasCtx.fillRect(0, 0, waveformCanvas.width, waveformCanvas.height);
        canvasCtx.lineWidth = 2;
        canvasCtx.strokeStyle = "#4361ee";
        canvasCtx.beginPath();

        const sliceWidth = waveformCanvas.width / dataArray.length;
        let x = 0;

        for (let i = 0; i < dataArray.length; i++) {
          const v = dataArray[i] / 128.0;
          const y = (v * waveformCanvas.height) / 2;

          if (i === 0) {
            canvasCtx.moveTo(x, y);
          } else {
            canvasCtx.lineTo(x, y);
          }

          x += sliceWidth;
        }

        canvasCtx.lineTo(waveformCanvas.width, waveformCanvas.height / 2);
        canvasCtx.stroke();

        // æª¢æŸ¥éœéŸ³ï¼ˆåƒ…åœ¨éŒ„éŸ³æ™‚ï¼‰
        if (
          mediaRecorder &&
          mediaRecorder.state === "recording" &&
          !isAutoStopping
        ) {
          checkSilence();
        }
      }

      // Update status
