        if (!weather) {
          return `${timeInfo.emoji} ${timeInfo.period}å¥½å‘€ï¼ç¾åœ¨æ˜¯${timeStr}ï¼Œå¾ˆé«˜èˆˆç‚ºæ‚¨æœå‹™ï½æœ‰ä»€éº¼æˆ‘å¯ä»¥å¹«å¿™çš„å—ï¼Ÿ`;
        }

        const { city, condition, temperature, rain_probability } = weather;

        // å£èªåŒ–çš„å•å€™é–‹å ´
        const openings = [
          `å—¨ï¼${timeInfo.period}å¥½å‘€ï½`,
          `å“ˆå›‰ï¼${timeInfo.period}å®‰ï½`,
          `å˜¿ï¼${timeInfo.period}å¥½å‘¢ï½`,
          `æ‚¨å¥½å‘€ï¼${timeInfo.period}å®‰ï½`,
        ];
        const opening = openings[Math.floor(Math.random() * openings.length)];

        // å£èªåŒ–çš„å¤©æ°£æè¿°
        let weatherDesc = "";
        if (temperature > 30) {
          weatherDesc = `ç¾åœ¨æ˜¯${timeStr}ï¼Œ${city}çš„å¤©æ°£${condition}ï¼Œæº«åº¦æœ‰${temperature}åº¦å‘¢ï¼ŒçœŸçš„è »ç†±çš„ï¼`;
        } else if (temperature < 15) {
          weatherDesc = `ç¾åœ¨æ˜¯${timeStr}ï¼Œ${city}çš„å¤©æ°£${condition}ï¼Œæº«åº¦åªæœ‰${temperature}åº¦ï¼Œæœ‰é»å†·å‘¢ï½`;
        } else {
          weatherDesc = `ç¾åœ¨æ˜¯${timeStr}ï¼Œ${city}çš„å¤©æ°£${condition}ï¼Œæº«åº¦å¤§ç´„${temperature}åº¦ï¼Œé‚„ç®—èˆ’é©ï¼`;
        }

        // åŸºæœ¬å•å€™
        let greeting = `${opening} ${weatherDesc}`;

        // æ ¹æ“šæ™‚æ®µå’Œå¤©æ°£çµ¦å»ºè­°
        const advice = getTimeBasedAdvice(hour, weather);
