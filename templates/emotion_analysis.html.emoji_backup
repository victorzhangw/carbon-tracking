      // Generate weather greeting
      function generateWeatherGreeting(weather) {
        const now = new Date();
        const hour = now.getHours();
        const timeInfo = getTimePeriodGreeting();

        // æ ¼å¼åŒ–æ™‚é–“
        const timeStr = now.toLocaleTimeString("zh-TW", {
          hour: "numeric",
          minute: "2-digit",
          hour12: false,
